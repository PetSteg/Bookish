@model Bookish.Web.Models.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Register</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Bookish.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Bookish.Web.styles.css" asp-append-version="true"/>
</head>

<body>
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                <div class="card-img-left d-none d-md-flex">
                    <!-- Background image for card set in CSS! -->
                </div>
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Register</h5>
                    <form asp-action="Register" method="post">

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" placeholder="name@example.com" asp-for="Name"/>
                            <label asp-for="Name">Name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" placeholder="name@example.com" asp-for="Email"/>
                            <label asp-for="Email">Email address</label>
                        </div>

                        <hr>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password"/>
                            <label asp-for="Password" class="">Password</label>
                        </div>

                        <div class="d-grid mb-2">
                            <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Register</button>
                        </div>

                        <a class="d-block text-center mt-2 small" href="/Home/Login">Have an account? Sign In</a>

                        <hr class="my-4">
                        @if (Model.Error == true)
                        {
                            <h7 class="card-title text-center mb-5 fw-light fs-5 text-danger text-center">Account already exists.</h7>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>